<%= form_for [@topic, @post, @comment], remote: true do |c| %>
    <div class="form-group">
        <%= c.label :comment %>
        <%= c.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comment" %>
    </div>
    <div class="form-group">
        <%= c.submit "Submit Comment", class: 'btn btn-success' %>
    </div>
<% end %>
